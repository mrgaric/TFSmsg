<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.igordubrovin.tfsmsg">

    <uses-permission android:name="android.permission.INTERNET" />
    s
    <application
        android:name=".utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activities.SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:noHistory="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity
            android:name=".activities.NavigationActivity"
            android:theme="@style/AppTheme.NoActionBar.TransparentStatusBar"></activity>
        <activity
            android:name=".activities.MessagesActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize"></activity>
        <activity android:name=".activities.AddDialogActivity"></activity>
    </application>

</manifest>