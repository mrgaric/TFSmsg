<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="text" format="string|reference"/>

    <declare-styleable name="ProgressButton">
        <attr name="text"/>
        <attr name="enabled"/>
    </declare-styleable>

    <declare-styleable name="MessageEditor">
        <attr name="text"/>
        <attr name="hint" format="string|reference"/>
        <attr name="enabled_send" format="boolean|reference"/>
        <attr name="visible_clear" format="integer|reference"/>
        <attr name="flag_animated_clear" format="boolean|reference"/>
    </declare-styleable>

    <declare-styleable name="MessageView">
        <attr name="message_text" format="string|reference"/>
        <attr name="sender_name" format="string|reference"/>
        <attr name="time" format="string|reference"/>
        <attr name="date" format="string|reference"/>
        <attr name="date_visibility" format="integer|reference">
            <enum name="visible_date" value="0x00000002"/>
            <enum name="gone_date" value="0x00000003"/>
            <enum name="invisible_date" value="0x00000004"/>
        </attr>
        <attr name="message_type" format="integer|reference">
            <enum name="incoming" value="0x00000000"/>
            <enum name="outgoing" value="0x00000001"/>
        </attr>
    </declare-styleable>
</resources>