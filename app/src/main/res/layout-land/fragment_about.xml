<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_root_tv"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/tv_app_name_summary"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_app_name_title"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_app_name_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/pref_app_name_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_app_name_summary"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_course_name_summary"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_courses_name_summary"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_courses_title"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_courses_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/pref_courses_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_course_name_summary"
            app:layout_constraintTop_toBottomOf="@+id/tv_version_title" />

        <TextView
            android:id="@+id/tv_dev_name_summary"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:text="@string/pref_dev_name_summary"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_developer_title"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_developer_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/pref_developer_title"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_dev_name_summary"
            app:layout_constraintTop_toBottomOf="@+id/tv_courses_title" />

        <TextView
            android:id="@+id/tv_version_summary"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="@string/pref_version_summary"
            app:layout_constraintBaseline_toBaselineOf="@+id/tv_version_title"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_version_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/pref_version_title"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_version_summary"
            app:layout_constraintTop_toBottomOf="@+id/tv_app_name_title" />
    </android.support.constraint.ConstraintLayout>

    <GridLayout
        android:id="@+id/cl_root_iv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:columnCount="2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintRight_toLeftOf="@+id/cl_root_tv"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/iv_keyboard"
            android:scaleType="fitCenter"
            android:src="@drawable/avd_vector_anim_keyboard" />

        <ImageView
            android:id="@+id/iv_emoji"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="fitCenter"
            android:src="@drawable/avd_vector_anim_emoji" />

        <ImageView
            android:id="@+id/iv_chat"
            android:scaleType="fitCenter"
            android:src="@drawable/avd_vector_anim_chat" />

        <ImageView
            android:id="@+id/iv_mess"
            android:scaleType="fitCenter"
            android:src="@drawable/avd_vector_mess" />

        <ImageView
            android:id="@+id/iv_send"
            android:scaleType="fitCenter"
            android:src="@drawable/avd_vector_anim_send" />

        <ImageView
            android:id="@+id/iv_cancel"
            android:scaleType="fitCenter"
            android:src="@drawable/avd_vector_anim_cancel" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>
