<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_root_iv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">


    <ImageView
        android:id="@+id/iv_keyboard"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avd_vector_anim_keyboard" />

    <ImageView
        android:id="@+id/iv_emoji"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitCenter"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avd_vector_anim_emoji" />

    <ImageView
        android:id="@+id/iv_chat"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/avd_vector_anim_chat"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_keyboard"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_mess"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/avd_vector_mess"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_emoji"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/iv_send"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/avd_vector_anim_send"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_chat"
        android:layout_marginLeft="48dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/iv_cancel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/avd_vector_anim_cancel"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_mess"
        android:layout_marginRight="48dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>